<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inicia_sesion"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etemail"
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="@string/ingresa_tu_correo"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#F6F5F5"
        android:textColorHint="#F8F6F6"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/etcontra"
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:layout_marginBottom="316dp"
        android:ems="10"
        android:hint="@string/ingresa_tu_password"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#F6F5F5"
        android:textColorHint="#F8F6F6"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.062"
        android:autofillHints="" />

    <ImageButton
        android:id="@+id/imglogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="204dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/button__13_"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_tienes_cuenta_aun"
        android:textColor="#FAF8F8"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594" />

    <Button
        android:id="@+id/btnregistrarte"
        android:layout_width="132dp"
        android:layout_height="42dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/acme"
        android:text="@string/registrate"
        android:textColor="#FA0000"
        android:textSize="14sp"
        app:iconTint="#000DFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>